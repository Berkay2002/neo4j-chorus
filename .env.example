# Neo4j Configuration
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env to git!

# ===========================================
# Authentication
# ===========================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=chorus_password_change_me

# ===========================================
# Port Configuration
# ===========================================
# HTTP Browser Interface
NEO4J_HTTP_PORT=7474

# HTTPS (optional, requires certificate)
NEO4J_HTTPS_PORT=7473

# Bolt Protocol (for client connections)
NEO4J_BOLT_PORT=7687

# ===========================================
# Memory Settings
# ===========================================
# Initial heap size
NEO4J_HEAP_INITIAL=512m

# Maximum heap size (adjust based on server RAM)
# Recommended: 50% of server RAM for dedicated server
# For 4GB RAM server: 2G
# For 8GB RAM server: 4G
NEO4J_HEAP_MAX=2G

# Page cache size (for graph data)
# Recommended: 25-50% of server RAM
NEO4J_PAGECACHE=1G

# ===========================================
# Environment
# ===========================================
# Options: development, production
NODE_ENV=development

# ===========================================
# Digital Ocean Deployment
# ===========================================
# Set to your droplet IP after deployment
SERVER_IP=

# SSH Port (default: 22)
SSH_PORT=22
